<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:id="@+id/text"/>

    <TableLayout

        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="#A1BBCC"
        android:orientation="vertical">
        <TableRow
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="AC"
                android:textColor="#C3B5D4" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="del"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="%"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="/"/>


        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="7"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="8"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="9"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="x"/>


        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="4"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="5"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="6"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="-"/>


        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="1"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="2"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="3"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="+"/>


        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_weight="2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="0" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="." />

            <Button
                android:background="#B3B4F4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="=" />

        </TableRow>
    </TableLayout>


</LinearLayout>